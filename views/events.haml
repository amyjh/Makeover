:javascript
  $('.demowrap').scrollNav({
    location: "prependTo",
    locationElem: ".feednavbar",
    sections: '.scroll-headline',
    titleText: '',
    fixedMargin: -40
  });
  
  // Move tickets nav item to end
  $('a:contains("Tickets")').appendTo(".scroll-nav-list").addClass("buy-tickets-nav-btn");
  
  var $nav = $('.scroll-nav'),
      $win = $(window),
      navTop = $nav.offset().top,
      onTop = false,
      checkScheduled = false;

  function checkNav() {
    var top = $win.scrollTop();
    if(navTop < top && !onTop) {
      onTop = true;
      $nav.addClass('navbar navbar-fixed-top');
      $nav.find('ul').addClass('nav navbar-nav');
    } else if(navTop >= top && onTop) {
      $nav.removeClass('navbar navbar-fixed-top');
      $nav.find('ul').removeClass('nav navbar-nav');
      onTop = false;
    }
  }

  $win.on('scroll', function() {
    if(!checkScheduled) {
      checkScheduled = true;
      setTimeout(function() {
        checkNav();
        checkScheduled = false;
      }, 100);
    }
  });  
  map = new GMaps({
          div: '#map',
          lat: 51.375799,
          lng: -2.359893,
          enableNewStyle: true
        });